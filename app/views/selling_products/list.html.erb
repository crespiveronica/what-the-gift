<% @selling_products.each do |selling_product| %>
    <li class="span2">
      <div class="thumbnail gift">
        <%= image_tag selling_product.product.photo, size: '100x100', class: 'img-rounded' %>
		<h5><%= selling_product.product.name %></h5>
		<p><small><%= selling_product.product.description %></small></p>
    <p><small><%= selling_product.price %></small></p>
        <p class="bottom">
            <%= link_to 'Modificar', edit_selling_products_path(:id => selling_product.id), :class => 'btn btn-mini btn-primary pull-right' %>
            <button class="btn btn-mini btn-warning pull-left" href="#confirmation-modal" data-toggle="modal">Eliminar</button>
        </p>
      </div>
    </li>

  <div id="confirmation-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="confirmation-modal" aria-hidden="true">
    <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>Eliminar producto</h4>
  </div>
    <div class="modal-body">
      <p id="message">¿Estás seguro que deseas elminar el producto?</p>
    </div>
    <div class="modal-footer">
      <button class="btn pull-left" data-dismiss="modal" aria-hidden="true">Cancelar</button>
      <%= button_to 'Eliminar', destroy_selling_products_path(:id => selling_product.id), :method => :delete,  :class => 'btn btn-danger btn-primary pull-right' %>
    </div>
  </div>

<% end %>