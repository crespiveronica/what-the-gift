<!-- Contenido principal -->
<div class="container">
  <div class="page-header text-center">
    <h3>John Doe <br><small>johndoe2013 | johndoe@gmail.com</small></h3>
  </div>

  <div class="tabbable tabs-left">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab"><i class="icon-user"></i> Perfil</a></li>
      <li><a href="#tab2" data-toggle="tab"><i class="icon-star"></i> Wish-list</a></li>
      <li><a href="#tab3" data-toggle="tab"><i class="icon-gift"></i> Regalos recibidos</a></li>
      <li><a href="#tab4" data-toggle="tab"><i class="icon-user"></i> Buscar amigos</a></li>
      <li><a href="#tab5" data-toggle="tab"><i class="icon-cog"></i> Preferencias</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="tab1">
        <form>
          <fieldset>
            <legend>
                <div class="row">
                  <div class="span7">
                  <h3>
                    Perfil
                    <a class="btn btn-success pull-right" href="/profile/edit">Editar perfil</a>
                  </h3>
                  </div>
                </div> 
            </legend>
            <div class="row">
              <div class="span4">
                <%= image_tag "lego5.jpg", size: "200x200", class: "img-polaroid img-rounded" %>
              </div>
            </div>
            <div class="row">
              <div class="span9"><h4>Sobre mi</h4></div>
            </div>
            <div class="row">
              <div class="span9">
                <div class="row">
                  <div class="span4"><strong>Nombre</strong></div>
                  <div class="span5">John</div>
                </div>
                <div class="row">
                  <div class="span4"><strong>Apellido</strong></div>
                  <div class="span5">Doe</div>
                </div>
                <div class="row">
                  <div class="span4"><strong>Ocupación</strong></div>
                  <div class="span5">Sistemas</div>
                </div>
                <div class="row">
                  <div class="span4"><strong>Pasatiempos</strong></div>
                  <div class="span5">Fútbol, programación, arte</div>
                </div>
                <div class="row">
                  <div class="span12"><hr></div>
                </div>
                <div class="row">
                  <div class="span4"><strong>E-mail</strong></div>
                  <div class="span5"><input type="text" placeholder="johndoe@gmail.com" disabled></div>
                </div>
                <div class="row">
                  <div class="span4"></div>
                  <div class="span3">
                    <p class="text-center"><button class="btn btn-success btn-block" type="button">Cambiar e-mail</button>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </fieldset>
        </form>
      </div>

      <div class="tab-pane" id="tab2">
        <form>
          <fieldset>
            <legend>Wish-list</legend>
          </fieldset>
          <p>Para agregar y borrar items del wishlist.</p>
        </form>
      </div>
      <div class="tab-pane" id="tab3">
        <form>
          <fieldset>
            <legend>Regalos recibidos</legend>
          </fieldset>
          <p>Lista de regalos recibidos.</p>
        </form>
      </div>
      <div class="tab-pane" id="tab4">
        <form>
          <fieldset>
            <legend>Buscar amigos</legend>
          </fieldset>
          <form class="form-search">
            <div class="input-append">
              <input type="text" class="span8 input-medium search-query">
              <button type="submit" class="btn">Buscar</button>
            </div>
          </form>
          <div class="row">
            <div class="span5"><a href="">Nombre amigo 1</a></div>
            <div class="span2"></div>
            <div class="span2"><img src="http://lorempixel.com/64/64/people/4" class="img-rounded"></div>
          </div>
          <div class="row">
            <div class="span5"><a href="">Nombre amigo 2</a></div>
            <div class="span2"></div>
            <div class="span2"><img src="http://lorempixel.com/64/64/people/2" class="img-rounded"></div>
          </div>
          <div class="row">
            <div class="span5"><a href=""></a></div>
            <div class="span2"></div>
            <div class="span2"></div>
          </div>
          <hr>
        </form>
      </div>
      <div class="tab-pane" id="tab5">
        <form>
          <fieldset>
            <legend>Preferencias</legend>
          </fieldset>
          <p>Para opciones de privacidad, etc.</p>
          <div class="row">
            <div class="span2"><a class="btn btn-danger btn-block" href="#deleteProfileModal" role="button" data-toggle="modal">Eliminar perfil</a></div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div id="deleteProfileModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="deleteProfileModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="deleteProfileModalLabel">Eliminar perfil</h3>
  </div>
  <div class="modal-body">
    <p>¿Está seguro de eliminar su cuenta?</p>
    <p>Podrá reactivarla en cualquier momento</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cerrar</button>
    <a class="btn btn-danger" href="/profile/delete">Eliminar</a>
  </div>
</div>