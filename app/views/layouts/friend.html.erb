<%= inside_layout "application" do %>
	<div class="page-header">
	    <h1><%=@friend.full_name%></h1>
	    <% if @friend.remaining_days > 1 %>
	    	<p class="text-center">Faltan <%= @friend.remaining_days %> días para su cumpleaños</p>
	    <% elsif @friend.remaining_days == 1 %>
	    	<p class="text-center"><strong>Mañana es el cumpleaños!</strong></p>
	    <% else %>
	    	<p class="text-center"><strong>Hoy es el cumpleaños!</strong></p>
	   	<% end %>
	</div>
		<div class="tabbable">
		    <ul class="nav nav-tabs">
		        <li <%= yield :activefriendprofile %>>
		        	<a href="/friends/<%=@friend.id%>">
		        		<i class="icon-user"></i> 
		        		Perfil
		        	</a>
		        </li>
		        <li <%= yield :activefriendwishlist %>>
		        	<a href="/friends/<%=@friend.id%>/make-a-gift">
		        		<i class="icon-gift"></i> 
		        		Hacele un regalo!
		        	</a>
		        </li>
		        <li <%= yield :activefriendgifts %>>
		        	<a href="/friends/<%=@friend.id%>/gifts">
		        		<i class="icon-ok"></i>
		        		Regalos recibidos
		        	</a>
		        </li>
		    </ul>
		    <div class="span12">
			    <%= yield %>
			</div>
		</div>
<% end %>