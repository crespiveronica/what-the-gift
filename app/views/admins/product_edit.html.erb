<div class="container">
  <h2>Administrar Productos</h2>

  <%= render 'shared/info_messages' %>

  <%= will_paginate @selling_products %>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Producto</th>
        <th>Vendedor</th>
        <th>Precio</th>
        <th colspan="2">Acci√≥n</th>
      </tr>
    </thead>

    <% @selling_products.each do |prod| %>
      <tr class="users">
        <td><%= prod.product %></td>
        <td><%= prod.seller %></td>
        <td><%= prod.price %></td>
        <td><%= link_to "Aprobar", approve_path(prod), method: :post, class: "btn btn-info btn-small" %></td>
        <td><%= link_to "Rechazar", reject_path(prod), method: :post, class: "btn btn-warning btn-small" %></td>
      </tr>
    <% end %>

  </table>

  <%= will_paginate @selling_products %>

</div>