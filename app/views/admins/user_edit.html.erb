<div class="container">
  <h2>Administrar Usuarios</h2>
  <%= render 'shared/info_messages' %>

  <%= will_paginate @users %>

  <table class="table">
    <% @users.each do |user| %>
      <tr class="users">
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.active ? 'Habilitado' : 'Deshabilitado' %></td>
        <td><%= link_to "Habilitar", enable_path(user), method: :post, class: "btn btn-info btn-small pull-right" %></td>
        <td><%= link_to "Deshabilitar", disable_path(user), method: :post, class: "btn btn-warning btn-small pull-right" %></td>
      </tr>
    <% end %>

  </table>

  <%= will_paginate @users %>

</div>