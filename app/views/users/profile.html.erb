<% content_for :activeprofile do %>
	class="active"
<% end %>

<fieldset>
  <legend>
      <div class="row">
        <div class="span7">
        <h4>
          Perfil
          <%= link_to '<i class="icon-pencil icon-white"></i> Editar'.html_safe, edit_user_path(current_user), class: "btn btn-primary btn-small" %>
          <a class="btn btn-small btn-danger" href="#deleteProfileModal" role="button" data-toggle="modal"><i class="icon-trash icon-white"></i> Eliminar perfil</a>
        </h4>
        </div>
      </div>
  </legend>
  <div class="row">
    <div class="span4">
      <%= image_tag current_user.avatar, size: "200x200", class: "img-polaroid img-rounded" %>
    </div>
  </div>
  <div class="row">
    <div class="span9"><h4>Sobre mi</h4></div>
  </div>
  <div class="row">
    <div class="span9">
      <div class="row">
        <div class="span4"><strong>Nombre</strong></div>
        <div class="span5"><%= current_user.first_name %></div>
      </div>
      <div class="row">
        <div class="span4"><strong>Apellido</strong></div>
        <div class="span5"><%= current_user.last_name %></div>
      </div>
      <div class="row">
        <div class="span4"><strong>Cumplea√±os</strong></div>
        <div class="span5"><%= current_user.birthday %></div>
      </div>
      <div class="row">
        <div class="span4"><strong>Email</strong></div>
        <div class="span5"><%= current_user.email %></div>
      </div>
      <div class="row">
        <div class="span4"><strong>Sexo</strong></div>
        <div class="span5"><%= current_user.genre %></div>
      </div>
      <div class="row">
        <div class="span4"><strong>Pasatiempos</strong></div>
        <% if current_user.hobbies != nil %>
          <div class="span5">
            <%= current_user.hobbies_string %>
          </div>
        <% else %>
          <div class="span5">No has registrado pasatiempos.</div>
        <% end %>
      </div>
    </div>
  </div>
</fieldset>
<% @user = current_user %>
<%= render template: 'shared/modals' %>