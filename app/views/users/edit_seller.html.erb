<%= render template: 'profile/modals' %>

<form>
  <fieldset>
    <legend><h4>Perfil Vendedor</h4></legend>
    <div class="row">
      <div class="span4">
        <a href="#changePhotoModal" role="button" data-toggle="modal"><span></span><%= image_tag "lego5.jpg", size: "200x200", class: "img-polaroid img-rounded" %></a>
      </div>
      <div class="span3"></div>
    </div>
    <div class="row">
      <div class="span3">
        <p class="text-center"><a class="btn btn-success btn-block" href="#changePhotoModal" role="button" data-toggle="modal">Cambiar foto</a>
        </p>
      </div>
      <div class="span3"></div>
    </div>
    <div class="row">
      <div class="span9"><h4>Sobre mi</h4></div>
    </div>
    <div class="row">
      <div class="span9">
        <div class="row">
          <div class="span4"><strong>Nombre</strong></div>
          <div class="span5"><input type="text" value="John"></div>
        </div>
        <div class="row">
          <div class="span4"><strong>Apellido</strong></div>
          <div class="span5"><input type="text" value="Doe"></div>
        </div>
        <div class="row">
          <div class="span4"><strong>Razón Social</strong></div>
          <div class="span5"><input type="text" value="Regalitos SRL" disabled></div>
        </div>
        <div class="row">
          <div class="span4"><strong>Locales</strong></div>
          <div class="span5"><input type="text" value="Medrano 950"></div>
        </div>
        <div class="row">
          <div class="span4"><strong>Páginas Web</strong></div>
          <div class="span5"><input type="text" value="www.regalitos.com.ar"></div>
        </div>
        <div class="row">
          <div class="span4"><strong>Teléfono</strong></div>
          <div class="span5"><input type="text" value="4444-3333"></div>
        </div>
        <div class="row">
          <div class="span4"><strong>Observaciones</strong></div>
          <div class="span5"><input type="text" value="Tenemos los mejores regalitos"></div>
        </div>
        <div class="row">
          <div class="span3"></div>
          <div class="span2">
            <p class="text-center"><a class="btn btn-success btn-block" href="/profile">Confirmar cambios</a>
            </p>
          </div>
          <div class="span2">
            <p class="text-center"><a class="btn btn-warning btn-block" href="/profile">Cancelar cambios</a>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="span12"><hr></div>
        </div>
        <div class="row">
          <div class="span4"><strong>Contraseña</strong></div>
          <div class="span5"><input type="text" placeholder="*********" disabled></div>
        </div>
        <div class="row">
          <div class="span4"></div>
          <div class="span3">
            <p class="text-center"><a class="btn btn-success btn-block" href="#changePasswordModal" role="button" data-toggle="modal">Cambiar Contraseña</a>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="span12"><hr></div>
        </div>
        <div class="row">
          <div class="span4"><strong>E-mail</strong></div>
          <div class="span5"><input type="text" placeholder="johndoe@gmail.com" disabled></div>
        </div>
        <div class="row">
          <div class="span4"></div>
          <div class="span3">
            <p class="text-center"><a class="btn btn-success btn-block" href="#changeEmailModal" role="button" data-toggle="modal">Cambiar e-mail</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </fieldset>
</form>

<%= render template: 'users/modals' %>