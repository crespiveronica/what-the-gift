<% provide(:title, 'Crear cuenta') %>
<h1>Crear cuenta</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :first_name, 'Nombre' %>
      <%= f.text_field :first_name %>

      <%= f.label :last_name, 'Apellido' %>
      <%= f.text_field :last_name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password, 'Contraseña' %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, 'Confirmar' %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :occupation, 'Ocupación' %>
      <%= f.text_field :occupation %>

      <%= f.label :hobbies, 'Pasatiempos y hobbies' %>
      <%= f.text_field :hobbies, placeholder: 'Separados por comas' %>

      <%= f.submit "Crear", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>